                    //- li.header_li
                    //-     a(href="/cart") CART
                    //- li.header_li
                    //-     a(href="/order") ORDER
        div.main_div
            h2.title Reset Password
            form.form(action="/reset-pwd" , method="POST")
                input(type="hidden", name="_csrf" value=`${csrfToken}`) 
                input(type="hidden", name="token" value=`${resetToken}`) 
                input(type="hidden", name="tokenAge" value=`${resetTokenValidity}`) 
                input(type="hidden", name="email" value=`${email}`)
                label(for="password") New Password
                input(type="password", name="password" , placeholder="password",value=`${formData&& formData.password || ''}`, required)
                label(for="cnfPassword") New Confirm Password
                input(type="text", name="cnfPassword" , placeholder="retype password",value=`${formData&& formData.cnfPassword || ''}`, required)
                div.button-ctr
                    button(type="submit") Save 
            if errorMessage 
                p.error #{errorMessage}
