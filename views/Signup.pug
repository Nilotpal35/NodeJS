        div.main_div
            h2.title Signup Form
            form.form(action="/signup" , method="POST")
                input(type="hidden", name="_csrf" value=`${csrfToken}`) 
                label(for="name") Name
                input(type="text", name="name" , placeholder="Name",value=`${formData&& formData.name || ''}`, required )
                label(for="email") Email
                input(type="text", name="email" , placeholder="email",value=`${formData&& formData.email || ''}` )
                label(for="password") Password
                input(type="password", name="password" , placeholder="password",value=`${formData&& formData.password || ''}`, required)
                label(for="cnfPassword") Confirm Password
                input(type="text", name="cnfPassword" , placeholder="retype password",value=`${formData&& formData.cnfPassword || ''}`, required)
                div.button-ctr
                    button(type="submit") SignUp 
            if errorMessage 
                p.error #{errorMessage}
