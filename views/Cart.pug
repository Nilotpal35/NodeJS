doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle}
        link(rel="stylesheet", href="/css/index.css")
    body
        header.header_main 
            nav.header_nav
                ul.header_ul
                    li.header_li
                        a(href="/") HOME
                    li.header_li
                        a(href="/admin/add-product") ADD-PRODUCT
                    li.header_li
                        a(href="/products") PRODUCT
                    li.header_li
                        a.active(href="/cart") CART
                    li.header_li
                        a(href="#") FAVOURITE
        div.main_div
            h1 This is Cart page
            div.cartContainer
                each product in prods
                    div.cartProducts
                        img.image(src=product.imageUrl, alt=`#{${product}}`,)
                        p.title #{product.title}
                        div.btnCtr
                            a.button(href="#") checkout 
                            a.button(href=`/cart/delete/${product.id}`) delete 
                            a.button(href=`/product-detail/${product.id}`) details
        footer.main_footer
            p &copy; 2023 Nilotpal &reg; MIT License